modules = ["nodejs-20", "web", "postgresql-16"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend dev"

[[workflows.workflow]]
name = "Backend server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=3001 npx tsx server/index.ts"
waitForPort = 3001

[[workflows.workflow]]
name = "Frontend dev"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[nix]
channel = "stable-25_05"
packages = ["imagemagick"]

[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "javascript_openai_ai_integrations:2.0.0"]

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "build.sh"]
publicDir = "dist"
run = ["node", "dist-server/index.js"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
